[Unit]
Description=Mzzb Server
Requires=mysql.service rabbitmq-server.service
After=mysql.service rabbitmq-server.service

[Service]
Type=forking
User=ubuntu
PIDFile=/home/ubuntu/mzzb-server/var/run.pid
WorkingDirectory=/home/ubuntu/mzzb-server
ExecStop=bash app.sh stop
ExecStart=bash app.sh start
ExecReload=bash app.sh restart

[Install]
WantedBy=multi-user.target
